{
  "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "enabled": true,
    "ignore": [
      "**/node_modules/**",
      "**/.cache/**",
      "**/.turbo/**",
      "**/dist/**",
      "**/build/**",
      "**/migrations/**"
    ],
    "indentStyle": "space"
  },
  "javascript": {
    "formatter": {
      "trailingComma": "es5"
    }
  }
}
