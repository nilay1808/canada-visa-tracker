{
  "extends": [
    "//"
  ],
  "pipeline": {
    "db:generate": {
      "dependsOn": [
        "^build"
      ],
      "cache": false
    },
    "db:migrate": {
      "dependsOn": [
        "db:generate",
        "db:up",
        "build"
      ]
    },
    "build": {
      "dependsOn": [
        "db:generate",
        "^build"
      ],
      "outputs": [
        "dist/**"
      ]
    },
    "dev": {
      "dependsOn": [
        "build",
        "db:up",
        "db:migrate"
      ],
      "persistent": true
    },
    "db:up": {},
    "start": {
      "dependsOn": [
        "db:migrate"
      ]
    }
  }
}
